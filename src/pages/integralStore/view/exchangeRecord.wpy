<script>
  import wepy from "wepy";
  import picker from "@components/picker";
  import Sticky from "@components/sticky";
  import api from 'Api'
  export default class ExchangeRecord extends wepy.page {
    config = {
      navigationBarTitleText: "兑换记录",
      navigationBarTextStyle: "black",
      backgroundTextStyle: "light"
    };
    data = {
      typeArray: ['全部','商品', '卡券'],
      scrollTop: 0,
      intergarList: [],
      requestData:{ //请求的数据
        type: "",
        beginTime: "",
        endTime: ""
      },
      integral:{
        score: "0"
      },
      integralUseAllNum:"0"
    };
    components = {
      Sticky,
      //   Refresh,
      datePicker: picker,
      allPicker: picker,
    };
    methods = {
      lower(index) {},
      scroll(e) { //页面滚动
        this.scrollTop = e.detail.scrollTop;
        this.$broadcast("PageScroll");
        this.$apply()
      }
    };
    events = {
      'refresh': (name, res) => {
        if (res === 'success') {
          setTimeout(() => {
            this.$invoke(name, 'reset')
          }, 3000)
        }
      },
      'bindPickerChange': (val)=>{
        console.log(val);
        if(val == '0'){
          this.requestData.type = "";
        }else{
          this.requestData.type = (parseInt(val)).toString();
        }
        (async()=>{
          this.intergarList =await this.getIntegralUseList();
          this.$apply();
        })()
      },
      'bindDateChange': (val)=>{
        console.log(val);
        // this.requestData.endTime = val;
        (async()=>{
          this.intergarList =await this.getIntegralUseList();
          this.$apply();
        })()
      }
    };
    async onShow() {
      console.log(this.$parent.globalData)
      this.integral =await this.getIntegral();
      this.integralUseAllNum = (await this.getIntegralUseAllNum()).score;
      this.intergarList =await this.getIntegralUseList();
      this.$apply();
    }
    // 获取积分信息
    async getIntegral(){
      let {
        shopId,
        userId,
        memberId
      } = this.$parent.globalData;
      let res = await api.getIntegral({
        shopId,
        userId,
        memberId
      });
      return res.data;
    }
    // 获取兑换记录信息
    async getIntegralUseList(){
      let {
        shopId,
        userId,
        memberId
      } = this.$parent.globalData;
      let {
        type,
        beginTime,
        endTime
      } = this.requestData;
      let res = await api.getIntegralUseList({
        shopId,
        userId,
        memberId,
        type,
        beginTime,
        endTime
      });
      return res.data;
    }
    // 获取兑换消耗总积分
    async getIntegralUseAllNum(){
      let {
        shopId,
        userId,
        memberId
      } = this.$parent.globalData;
      let res =await api.getIntegralUseAllNum({
        shopId,
        userId,
        memberId
      });
      console.log(res)
      return res.data;
    }
  }
</script>
