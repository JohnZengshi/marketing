<template>
  <view class="AfterSaleCriterion">
      <criterion :serverRule.sync="serverRule"></criterion>
  </view>
</template>
<script>
  import wepy from "wepy";
  import api from "Api";
  import criterion from "../components/criterion";
  export default class AfterSaleCriterion extends wepy.page {
    config = {
      navigationBarTitleText: "售后准则",
      navigationBarTextStyle: "black",
      backgroundTextStyle: "light"
    };
    data = {
      serverRule:{}
    };
    components = {
        criterion,
    };
    async onShow() {
      this.serverRule = await this.getServerRule();
      this.$apply();
    }
    // 获取售后准则数据
    async getServerRule() {
      let res = await api.getServerRule({
        dataType: "3"
      });
      return res;
    }
  }
</script>
